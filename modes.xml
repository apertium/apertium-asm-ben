<modes>

  <!-- as -> bn -->
  
  <mode name="as-bn" install="yes">
    <pipeline>
      <program name="lt-proc">
        <file name="as-bn.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="as-bn.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-as-bn.as-bn.t1x"/>
        <file name="as-bn.t1x.bin"/>
        <file name="as-bn.autobil.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="as-bn.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
  
